---
import { SITE } from '@/consts'
import { Separator } from '@/components/ui/separator'
import { SOCIAL_LINKS } from '@/consts'
import Link from './Link.astro'
import SocialIcons from './SocialIcons.astro'
---

<footer class="py-4">
  <div
    class="mx-auto flex max-w-3xl flex-col items-center justify-center gap-y-2 px-4 sm:flex-row sm:justify-between"
  >
    <div class="flex flex-wrap items-center justify-center gap-x-2 text-center">
      <span class="text-muted-foreground text-sm">
        &copy; 2020-{new Date().getFullYear()}. All rights reserved.
      </span>
      <Separator orientation="vertical" className="hidden h-4! sm:block" />
        <p class="text-muted-foreground text-sm">
          Made with <span class="heart-invert handjet">ü§ç</span> by <Link
            href={`${SITE.href}/about`}
            class="text-foreground"
            underline>Sadman Hossain</Link
          >
        </p>        
      </p>
    </div>
    
    <!-- Webring widget -->
    <div
      class="mx-auto w-fit max-w-xl flex items-center justify-center gap-2 p-1 px-4 rounded-lg border bg-background hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50"
    >
      <a
        href="https://webring.skule.ca/#https://sadman.ca?nav=prev"
        class="text-gray-800 text-lg hover:text-gray-500 dark:text-gray-200 dark:hover:text-gray-400"
      >‚Üê</a>
      <a
        href="https://webring.skule.ca/#https://sadman.ca"
        target="_blank"
      >
        <img
          src="https://webring.ayanali.net/img/icon.svg"
          alt="UofT Webring SKULE Website Phone Book"
          class="w-4 h-4 filter dark:invert"
        />
      </a>
      <a
        href="https://webring.skule.ca/#https://sadman.ca?nav=next"
        class="text-gray-800 text-lg hover:text-gray-500 dark:text-gray-200 dark:hover:text-gray-400"
      >‚Üí</a>
    </div>
    
    <SocialIcons links={SOCIAL_LINKS} />
  </div>

</footer>
